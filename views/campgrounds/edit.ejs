<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Campground - <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lrg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>



<% include ../partials/footer %>