<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Campground - <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Campground Name</label>
                <input class="form-control" type="text" value="<%= campground.name %>" name="name" ></input>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" value="<%= campground.price %>" name="price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <label for="image">Campground Image URL</label>
                <input class="form-control" type="text" value="<%= campground.image %>" name="image"></input>
            </div>
            <div class="form-group">
                <label for="description">Campground Description</label>
                <input class="form-control" type="text" value="<%= campground.description %>" name="description"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lrg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>



<% include ../partials/footer %>