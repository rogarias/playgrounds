<% include ../partials/header %>

<h1 class="lead" style="text-align: center;">Add New Review for <%= playground.name %></h1>
<div class="row">
    <div style="width: 30%; margin: 25px auto">
        <form action="/playgrounds/<%= playground._id %>/comments"/ method="POST">
            <div class="form-group">
                <label for="comment[text]">Review Text</label>
                <input class="form-control" type="text" name="comment[text]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lrg btn-default btn-block btn-secondary">Submit!</button>
            </div>
        </form>
        <a href="/playgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>