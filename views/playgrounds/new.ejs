<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a New Playground</h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/playgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Playground Name</label>
                <input class="form-control" type="text" name="playground[name]" id="name"></input>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="playground[price]" id="price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="playground[location]" id="location">
            </div>
            <div class="form-group">
                <label for="image">Playground Image URL</label>
                <input type="file" id="image" name="image" accept="image/*" required></input>
            </div>
            <div class="form-group">
                <label for="description">Playground Description</label>
                <input class="form-control" type="text" name="playground[description]" id="description"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lrg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/playgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>