<% include ../partials/header %>

<h1 style="text-align: center;">Create a New Playground</h1>
<div class="row">
    <div style="width: 30%; margin: 25px auto">
        <form action="/playgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Playground Name<span id="required"> *</span></label>
                <input class="form-control" type="text" name="playground[name]" id="name" required></input>
            </div>
            <div class="form-group">
                <label for="price">Price<span id="required"> *</span></label>
                <input class="form-control" type="number" name="playground[price]" id="price" min="0.00" step="0.01" required></input>
            </div>
            <div class="form-group">
                <label for="priceNotes">Price Notes<span id="required"> *</span></label>
                <input class="form-control" type="text" name="playground[priceNotes]" id="priceNotes" required></input>
            </div>
            <div class="form-group">
                <label for="location">Location<span id="required"> *</span></label>
                <input class="form-control" type="text" name="playground[location]" id="location" required>
            </div>
            <div class="form-group">
                <label for="image">Playground Image URL<span id="required"> *</span></label>
                <input type="file" class="form-control-file" id="image" name="image" accept="image/*" required></input>
            </div>
            <div class="form-group">
                <label for="description">Playground Description</label>
                <input class="form-control" type="text" name="playground[description]" id="description"></input>
            </div>
            <div class="form-group">
                <label for="sport">Available Sports<span id="required"> *</span></label>
                <input class="form-control" type="text" name="playground[sport]" id="sport" required></input>
            </div>
            <div class="form-group" style="display:inline-block">
                <label for="lights">Lights Available</label>
                <input class="form-control" type="checkbox" name="playground[lights]" id="lights" value="true"></input>
            </div>
            <div class="form-group">
                <legend>Playground Type</legend>
                <div style="display:inline-block">
                    <label for="indoor">Indoor</label>
                    <input class="form-control" type="checkbox" name="playground[type]" id="indoor" value="indoor"></input>
                </div>
                <div style="display:inline-block">
                    <label for="outdoor">Outdoor</label>
                    <input class="form-control" type="checkbox" name="playground[type]" id="outdoor" value="outdoor"></input>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lrg btn-default btn-block btn-secondary">Submit!</button>
            </div>
        </form>
        <a href="/playgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>